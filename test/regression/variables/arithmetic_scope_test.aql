// Arithmetic expressions with complex scoping
let a = 2
let b = 3
{
    let c = a * b  // 2 * 3 = 6
    a = a + c      // 2 + 6 = 8
    {
        let a = 10  // shadow outer a
        let d = a + b + c  // 10 + 3 + 6 = 19
        b = b * 2   // modify outer b: 3 * 2 = 6
        print("inner: a=" + a + ", b=" + b + ", c=" + c + ", d=" + d)
    }
    print("middle: a=" + a + ", b=" + b + ", c=" + c)
}
print("outer: a=" + a + ", b=" + b)

