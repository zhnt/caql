// Deep tail call test

function sum_tail(n, acc) {
    if n <= 0 {
        return acc
    }
    return sum_tail(n - 1, acc + n)
}

print("Testing deep tail call:")
let result1 = sum_tail(10, 0)
print("sum_tail(10, 0) = " + string(result1))

let result2 = sum_tail(100, 0)
print("sum_tail(100, 0) = " + string(result2))

let result3 = sum_tail(1000, 0)
print("sum_tail(1000, 0) = " + string(result3))

